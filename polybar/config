# background = ${xrdb:background}
# background = #00000000
background = #e60a0f14
background-alt = ${xrdb:color10}
foreground = ${xrdb:color15}

[res/borders]
border-size = 00
border-color = #00000000
border-radius = 0.0

[bar/base]
background = ${res/colors.background}
foreground = ${res/colors.foreground}

border-top-size = ${res/borders.border-size}
border-left-size = ${res/borders.border-size}
border-right-size = ${res/borders.border-size}
