spacing = 0
module-margin = 4
padding = 4

font-0 = Noto Sans:size=10;1
font-1 = Unifont:size=8;0
font-2 = FontAwesome:size=10;2

[bar/bar-a]
width = 100%
height = 36
monitor = DP-1
inherit = bar/base

modules-left = cpu memory
modules-right = wired-network volume custom-power
modules-center = date

[bar/bar-b]
width = 100%
height = 36
monitor = HDMI-1
inherit = bar/base
padding-left = 0

tray-position = right
modules-left = i3
modules-right = filesystem
modules-center = title

[module/title]
type = internal/xwindow
format-background = ${res/colors.background}
format-foreground = ${res/colors.foreground}
format-padding = 4

label = %title%
label-maxlen = 50

[module/custom-power]
type = custom/menu

label-open = 
label-separator = |
label-separator-margin = 1

format = <label-toggle> <menu>
format-padding = 1
menu-0-0 =   shutdown
menu-0-0-exec = shutdown -P now
menu-0-1 =   restart
menu-0-1-exec = shutdown -r now
menu-0-2 =   cancel

